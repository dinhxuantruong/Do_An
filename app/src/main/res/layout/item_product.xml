<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="10dp"
    android:elevation="10dp"
    >

    <LinearLayout
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageProduct"
            android:src="@drawable/qqq"
            android:layout_gravity="center"
            android:layout_width="170dp"
            android:layout_height="170dp" />

        <at.blogc.android.views.ExpandableTextView
            android:id="@+id/txtNameProduct"
            android:layout_width="160dp"
            android:textColor="@color/black"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/robotomedium"
            android:maxLines="2"
            android:ellipsize="end"
            app:animation_duration="750"
            android:text="@string/name_product_test"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/txtPriceProduct"
            android:layout_width="160dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/robotobold"
            android:maxLines="2"
            android:text="@string/_120_000_chai"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtCountFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 30"
                android:drawableStart="@drawable/love2"
                android:fontFamily="@font/roboto"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical" />

            <TextView
                android:text="|"
                android:paddingLeft="5dp"
                android:fontFamily="@font/roboto"
                android:paddingRight="5dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtCountSold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã bán 100"
                android:fontFamily="@font/roboto"
                android:textSize="14sp"
                android:layout_marginBottom="10dp" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>