<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="10dp"
    app:cardElevation="1dp"
    android:layout_marginBottom="1dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txtTime"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="3 ngày trước"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto"
            android:text="Đinh Xuân Trường"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image"
            app:layout_constraintTop_toTopOf="parent" />



        <at.blogc.android.views.ExpandableTextView
            android:id="@+id/txtComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:maxLength="300"
            android:maxLines="5"
            android:text="@string/name_product_test"
            android:textSize="16sp"
            android:paddingBottom="16dp"
            app:animation_duration="750"
            app:layout_constraintStart_toStartOf="@+id/ratingBarSendData"
            app:layout_constraintTop_toBottomOf="@+id/ratingBarSendData" />

        <RatingBar
            android:id="@+id/ratingBarSendData"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:theme="@style/RatingBar"
            app:layout_constraintStart_toStartOf="@+id/image"
            app:layout_constraintTop_toBottomOf="@+id/image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtComment">
            <ImageView
                android:id="@+id/imageType"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintStart_toStartOf="@+id/txtCommnet"
                app:layout_constraintTop_toBottomOf="@+id/txtCommnet" />
            <at.blogc.android.views.ExpandableTextView
                android:id="@+id/txtNameProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto"
                android:maxLength="300"
                android:maxLines="2"
                android:text="@string/name_product_test"
                android:textSize="16sp"
                app:animation_duration="750" />
        </LinearLayout>






    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>